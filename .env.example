# Copy to .env and fill values. Never commit .env

# --- Telegram (Telethon user session) ---
# Create these at https://my.telegram.org/apps
TELEGRAM_API_ID=123456
TELEGRAM_API_HASH=your_api_hash_here

# Optional convenience for scripts/telegram_login.py
TELEGRAM_PHONE=+15551234567

# --- OpenAI ---
OPENAI_API_KEY=sk-...

# Reply/crafting model (default: gpt-4o-mini). Example for GPT-5:
# OPENAI_MODEL=gpt-5-nano
OPENAI_MODEL=gpt-4o-mini

# Summary model (default: gpt-4o-mini). Example:
# OPENAI_SUMMARY_MODEL=gpt-4o-mini
OPENAI_SUMMARY_MODEL=gpt-4o-mini

# --- App ---
LOG_LEVEL=INFO

# --- Dashboard auth (optional) ---
# If both are set, the entire web UI is protected by HTTP Basic Auth.
DASHBOARD_USERNAME=admin
DASHBOARD_PASSWORD=change_me
